<%- include('includes/nav') %>
<%- include('includes/head') %>
<div class="container">
  <div class="col-lg">

    <div class="col-lg my-3">
      <h1 class="display-2 text-center">Login</h1>
      <p class="text-center lead">Faça seu login ou crie sua conta abaixo</p>


      <div class="row">
        <div class="col-lg">
          <h4>Faça seu Cadastro</h4>
          <p class="fs-10px">Se você ainda não tem conta, preencha o formulário a baixo:</p>


          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">E-mail</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Senha</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Criar Minha Conta</button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Faça seu Login</h4>

          <p class="fs-10px">Se você ja tem uma conta, faça login abaixo:</p>

          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">E-mail</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Senha</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
        </div>
      </div>


   
    </div>
  </div>
</div>
<%- include('includes/footer') %>
